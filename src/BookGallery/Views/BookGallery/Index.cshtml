@model List<BookGallery.Models.BookGalleryItem>
@{
    ViewBag.Title = "Index";
   
}
<h2>Index</h2>

<div class="row">
    @foreach (var bookItem in Model)
    {
        <div class="col-md-3">
            <h4>@Html.ActionLink(@bookItem.DisplayText,"Detail", new{ Id = bookItem.Id})</h4>
            <img src="/Images/@bookItem.CoverImageFileName"
                 alt="@bookItem.DisplayText"
                 class="img-responsive"/>
        </div>
    }
   
</div>